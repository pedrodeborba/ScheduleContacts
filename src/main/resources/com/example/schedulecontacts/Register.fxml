<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.schedulecontacts.controller.RegisterController">
   <children>
      <VBox layoutX="133.0" layoutY="70.0" prefHeight="304.0" prefWidth="334.0" style="-fx-background-color: #6495ED; -fx-background-radius: 10; -fx-alignment: center;">
         <children>
            <TextField fx:id="emailField" promptText="Email" style="-fx-min-height: 30; -fx-border-color: #6495ED;">
               <VBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </VBox.margin>
            </TextField>
            <PasswordField fx:id="passwordField" promptText="Senha" style="-fx-min-height: 30; -fx-border-color: #6495ED;">
               <VBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </VBox.margin>
            </PasswordField>
            <PasswordField fx:id="ConfirmPasswordField" promptText="Confirmar senha" style="-fx-min-height: 30; -fx-border-color: #6495ED;">
               <VBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </VBox.margin>
            </PasswordField>
            <Button mnemonicParsing="false" onAction="#register" prefHeight="25.0" prefWidth="135.0" style="-fx-background-color: #fff; -fx-background-radius: 10;" text="Registrar-se" textAlignment="JUSTIFY" textFill="CORNFLOWERBLUE">
               <VBox.margin>
                  <Insets bottom="15.0" />
               </VBox.margin>
               <font>
                  <Font name="Arial Bold" size="12.0" />
               </font>
            </Button>
            <Hyperlink onAction="#goToLogin" text="Já possui uma conta? Faça login" textFill="WHITE" underline="true" />
         </children>
      </VBox>
   </children>
</AnchorPane>
