<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="768.0" prefWidth="1366.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.schedulecontacts.controller.AuthController">
   <children>
      <VBox alignment="CENTER" layoutX="400.0" layoutY="150.0" prefHeight="450.0" prefWidth="600.0" style="-fx-background-color: #6495ED; -fx-background-radius: 20;">
         <children>
            <TextField fx:id="emailField" promptText="Email" style="-fx-min-height: 50; -fx-background-color: #fff; -fx-background-radius: 20;">
               <VBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </VBox.margin>
               <font>
                  <Font size="15.0" />
               </font>
               <padding>
                  <Insets left="20.0" />
               </padding>
            </TextField>
            <PasswordField fx:id="passwordField" promptText="Senha" style="-fx-min-height: 50; -fx-background-color: fff; -fx-background-radius: 20;">
               <VBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </VBox.margin>
               <font>
                  <Font size="15.0" />
               </font>
               <padding>
                  <Insets left="20.0" />
               </padding>
            </PasswordField>
            <Button mnemonicParsing="false" onAction="#login" prefHeight="31.0" prefWidth="81.0" style="-fx-min-height: 50; -fx-min-width: 200; -fx-border-color: fff; -fx-border-width: 3; -fx-border-radius: 20; -fx-background-color: #6495ED;" text="Entrar" textFill="WHITE">
               <VBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </VBox.margin>
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Button>
            <Hyperlink onAction="#goToRegister" text="Não possui uma conta? Faça seu cadastro" textFill="WHITE" underline="true">
               <font>
                  <Font size="15.0" />
               </font></Hyperlink>
         </children>
      </VBox>
   </children>
</AnchorPane>